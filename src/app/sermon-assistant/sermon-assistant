// sermon-selection/SermonAssistantComponent.js

import React from 'react';

// 아이콘 컴포넌트들은 page.js나 별도의 파일에 정의되어 있어야 합니다.
// 여기서는 FullscreenIcon만 필요하므로, 이 컴포넌트만 정의하거나 import하면 됩니다.
const FullscreenIcon = () => (
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round" className="lucide lucide-maximize">
        <path d="M8 3H5a2 2 0 0 0-2 2v3"/>
        <path d="M21 8V5a2 2 0 0 0-2-2h-3"/>
        <path d="M3 16v3a2 2 0 0 0 2 2h3"/>
        <path d="M16 21h3a2 2 0 0 0 2-2v-3"/>
    </svg>
);

const SermonAssistantComponent = ({
    sermonInput,
    setSermonInput,
    aiCommentary,
    setAiCommentary,
    errorMessage,
    setErrorMessage,
    handleGetCommentary,
    toggleFullscreen, // 부모로부터 받은 전체 화면 토글 함수
    setSermonDraft,
    sermonDraft,
}) => {
    return (
        <div className="text-center">
            <div className="flex justify-between items-center mb-8">
                <h2 className="text-4xl font-extrabold text-white">Sermon Assistant</h2>
                <div className="w-1/4"></div>
            </div>
            <p className="text-lg text-gray-400 mb-8 max-w-2xl mx-auto">Topic, Question or Bible Verse</p>
            {errorMessage && (
                <div className="bg-red-900 text-red-300 p-4 rounded-xl mb-4 max-w-2xl mx-auto">
                    {errorMessage}
                </div>
            )}
            <div className="flex flex-col items-center space-y-4">
                <textarea
                    value={sermonInput}
                    onChange={(e) => setSermonInput(e.target.value)}
                    placeholder="Enter a topic, question or Bible verse"
                    className="w-full md:w-96 p-4 rounded-xl bg-gray-800 border border-gray-700 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    rows="4"
                />
                <button
                    onClick={handleGetCommentary}
                    className="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-xl shadow-lg transition duration-300"
                >
                    Get Commentary
                </button>
            </div>
            {aiCommentary && (
                <div className="mt-8 text-left max-w-2xl mx-auto">
                    <div className="flex justify-between items-center mb-2">
                        <h3 className="text-xl font-semibold text-white">AI Commentary:</h3>
                        <div className="flex space-x-2">
                            {/* toggleFullscreen 함수를 호출할 때 aiCommentary 내용을 인자로 전달합니다. */}
                            <button 
                                onClick={() => toggleFullscreen(aiCommentary)} 
                                className="text-gray-400 hover:text-white transition"
                            >
                                <FullscreenIcon />
                            </button>
                        </div>
                    </div>
                    <div className="p-4 rounded-xl bg-gray-800 border border-gray-700 whitespace-pre-wrap">
                        {aiCommentary}
                    </div>
                    {/* Add to Sermon Draft 버튼을 추가합니다. */}
                    <div className="flex justify-end mt-4">
                        <button
                            onClick={() => setSermonDraft(prevDraft => (prevDraft ? prevDraft + '\n\n' : '') + aiCommentary)}
                            className="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-lg transition"
                        >
                            Add to Sermon Draft
                        </button>
                    </div>
                </div>
            )}
        </div>
    );
};

export default SermonAssistantComponent;
