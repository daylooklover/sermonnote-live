{
  "functions": {
    "source": "functions",
    "runtime": "nodejs22",
    "region": "us-central1"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/",
        "destination": "/welcome.html"
      },
      {
        "source": "/app/**",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "port": 4000
    }
  }
}